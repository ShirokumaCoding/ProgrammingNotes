@model IEnumerable<Post> 
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Posts</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Blog" asp-action="Create" class="btn btn-primary">
                New Post
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Post</th>
                <th>Created Date</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model) {
                <tr>
                    <td>@obj.PostTitle</td>
                    <td>@obj.PostBody</td>
                    <td>@obj.CreatedDate.ToShortDateString()</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Blog" class="btn btn-info" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                            <a asp-controller="Blog" class="btn btn-warning" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
