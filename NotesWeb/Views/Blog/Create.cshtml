@model Post

@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create a post...</h2>
        </div>
        <div class="mb-3">
            <label asp-for="PostTitle"></label>
            <input asp-for="PostTitle" class="form-control" />
            <label asp-for="PostBody"></label>
            <textarea asp-for="PostBody" class="form-control" style="resize:none" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create Post</button>
        <a asp-controller="Blog" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
    </div>
</form>

